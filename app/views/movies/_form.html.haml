= form_for @movie do |f|
  - if @movie.errors.any?
    #error_explanation
      %h2= "#{pluralize(@movie.errors.count, "error")} prohibited this movie from being saved:"
      %ul
        - @movie.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :rotting_id
    = f.number_field :rotting_id
  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :synopsis
    = f.text_area :synopsis
  .field
    = f.label :runtime
    = f.number_field :runtime
  .field
    = f.label :year
    = f.number_field :year
  .field
    = f.label :rating
    = f.number_field :rating
  .field
    = f.label :mpaa_rating
    = f.text_field :mpaa_rating
  .field
    = f.label :thumb
    = f.text_field :thumb
  .field
    = f.label :original
    = f.text_field :original
  .actions
    = f.submit 'Save'
